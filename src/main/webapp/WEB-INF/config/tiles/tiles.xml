<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
  "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
  "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">

<tiles-definitions>
    <definition name="default_layout" template="/WEB-INF/views/layouts/base.jsp">
        <put-attribute name="header" value="/WEB-INF/views/layouts/header.jsp" />
        <put-attribute name="title" value="LogiticsTrack360" />
        <put-attribute name="content" value=""/>
        <put-attribute name="left" value="/WEB-INF/views/layouts/left.jsp" />
        <put-attribute name="footer" value="/WEB-INF/views/layouts/footer.jsp" />
    </definition>

	<!-- Include Tiles -->
	<definition name="main" extends="default_layout">
        <put-attribute name="content" value="/WEB-INF/views/main.jsp"/>
	</definition>
	
    <definition name="*/*" extends="default_layout">
        <put-attribute name="content" value="/WEB-INF/views/{1}/{2}.jsp" />
    </definition>

    <definition name="*/*/*" extends="default_layout">
        <put-attribute name="content" value="/WEB-INF/views/{1}/{2}/{3}.jsp" />
    </definition>

    <!-- Exclude Tiles -->
    <definition name="user/login" template="/WEB-INF/views/layouts/empty.jsp">
    	<put-attribute name="title" value="LogiticsTrack360" />
        <put-attribute name="content" value="/WEB-INF/views/user/login.jsp" />
    </definition>

    <definition name="user/join" template="/WEB-INF/views/layouts/empty.jsp">
    	<put-attribute name="title" value="LogiticsTrack360" />
        <put-attribute name="content" value="/WEB-INF/views/user/join.jsp" />
    </definition>

</tiles-definitions>
